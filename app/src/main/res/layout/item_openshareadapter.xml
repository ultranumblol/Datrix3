<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="4dp"
    android:maxHeight="500dp"
    android:minHeight="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/rv_sharefile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="50dp"
            android:background="#F5F5F5"
            android:minHeight="170dp"></com.jude.easyrecyclerview.EasyRecyclerView>

        <ImageView
            android:id="@+id/img_share_download"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_share_download" />

        <ImageView
            android:id="@+id/img_share_delete"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_share_download"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_share_delete" />

        <ImageView
            android:id="@+id/img_share_code"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_share_delete"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:src="@drawable/ic_share_code" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic_nowhy"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:background="@drawable/share_diandian" />

            <TextView
                android:id="@+id/tv_who_share_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/pic_nowhy"
                android:text="XXXX分享了一个文件"
                android:textSize="14dp"

                />

            <TextView
                android:id="@+id/tv_sharetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:text="2017-07-25" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
